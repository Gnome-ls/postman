							"    pm.test(\"La clave 'transactions' existe en la respuesta\", function () {",
							"        pm.expect(response).to.have.property('transactions');",
							"    });",
							"",
							"    pm.test(`El transactionId ${targetTransactionId} estÃ¡ en status 'PAID' y tiene 'lastDigits' como 'manual_payment'`, function () {",
